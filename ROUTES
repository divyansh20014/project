<routes xmlns="http://camel.apache.org/schema/spring">
  
  <!-- Route for Financial Transaction -->
  <route id="processFinancialRoute">
    <from uri="direct:processFinancial"/>
    <log message="Processing Financial Transaction: ${body}"/>
    <transform>
      <simple>${body}</simple>
    </transform>
  </route>

  <!-- Route for Non-Financial Transaction -->
  <route id="processNonFinancialRoute">
    <from uri="direct:processNonFinancial"/>
    <log message="Processing Non-Financial Transaction: ${body}"/>
    <transform>
      <simple>${body}</simple>
    </transform>
  </route>

</routes>
